{{> header.mustache}}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" style="margin-top: -1.5em" data-setbg="/static/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6><span class="icon_tag_alt"></span> Have a coupon? Enter the coupon code in te <b>order notes</b>!
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form method="POST">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Fist Name<span>*</span></p>
                                    <input type="text" name="firstname" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input type="text" name="lastname" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            <input type="text" name="country" required>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" placeholder="Address" class="checkout__input__add" name="address" required>
                        </div>
                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input type="text" name="zip" required>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Credit Card Owner<span>*</span></p>
                                    <input type="text" name="cardowner" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Credit Card Number<span>*</span></p>
                                    <input type="text" name="cardnumber" required>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="checkout__input">
                                    <p>Expiration Date<span>*</span></p>
                                    <input type="date" name="carddate" required>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="checkout__input">
                                    <p>CVV<span>*</span></p>
                                    <input type="text" name="cvv" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input type="text"
                                   placeholder="Notes about your order, e.g. special notes for delivery." name="notes">
                        </div>
                        <input type="hidden" name="amount" value="{{totalprice}}">
                        <input type="hidden" name="items" value="{{#cart}}{{name}}  {{/cart}}">
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                {{#cart}}
                                    <li>{{name}} x {{quantity}} <span>${{itemprice}}</span></li>
                                {{/cart}}
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>${{subtotalprice}}</span></div>
                            <div class="checkout__order__total">Total <span>${{totalprice}}</span></div>
                            
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

{{> footer.mustache}}
