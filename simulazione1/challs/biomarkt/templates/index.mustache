{{> header.mustache}}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        {{#categories}}
                            <li><a href="/products?q={{category}}&qt=category">{{category}}</a></li>
                        {{/categories}}
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="/products" method="GET">
                            <input type="text" name="q" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/static/img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>FRUIT FRESH</span>
                        <h2>Vegetable <br />100% Organic</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a href="/products" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                {{#categories}}
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="{{imgsrc}}">
                            <h5><a href="/products?q={{category}}&qt=category">{{category}}</a></h5>
                        </div>
                    </div>
                {{/categories}}
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".Fruit">Fruit</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            {{#featured}}
                <div class="col-lg-3 col-md-4 col-sm-6 mix {{category}}">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="{{imgsrc}}">
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/details?id={{id}}">{{name}}</a></h6>
                            <h5>${{price}}</h5>
                        </div>
                    </div>
                </div>
            {{/featured}}
            
        </div>
    </div>
</section>
<!-- Featured Section End -->

<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <a href="/products">
                        <img src="/static/img/banner/banner-1.jpg" alt="">
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <a href="/products">
                        <img src="/static/img/banner/banner-2.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->

{{> footer.mustache}}
